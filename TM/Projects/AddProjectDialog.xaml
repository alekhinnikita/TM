<Window x:Class="TM.Projects.AddProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TM.Projects"
        mc:Ignorable="d"
        Title="Добавить проект" Height="160" Width="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="20 10 20 0">
            <Label Content="Имя" Width="60"/>
            <TextBox Name="NameBox" Width="200" Height="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20 10 20 0">
            <Label Content="Код" Width="60"/>
            <TextBox Name="CodeBox" Width="200" Height="20"/>
        </StackPanel>
        <Button Name="AddButton" Content="Добавить" Margin="20 10 20 20" Click="AddButton_Click"/>
    </StackPanel>
</Window>
